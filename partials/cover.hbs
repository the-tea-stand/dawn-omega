<div class="cover gh-outer">
    <div class="cover-content gh-inner">
        {{#if @site.icon}}
        <div class="cover-icon">
            <img class="cover-icon-image" src="{{@site.icon}}" alt="{{@site.title}}">
        </div>
        {{/if}}

        {{#if @site.description}}
        <div id="cover-description" class="cover-description"></div>
        {{/if}}

        {{#if @site.members_enabled}}
        {{#unless @member}}
        {{!-- TODO Move this below monthly news letters, keep whitespace --}}
        <div class="cover-cta">
            <a class="button members-subscribe" href="/signup">Sign up</a>
            <button class="button button-secondary members-login" data-portal="signin">Login</button>
        </div>
        {{/unless}}
        {{/if}}
    </div>
    <div class="card-section-title">
        <div>
        <h3>{{@custom.card_section_title}}</h3>
        </div>
        <div id="programming-subtitle"></div>
    </div>
    <section id="card-container">
    </section>
    <div class="articles-section-title-container">
        <div>
        <h3 id="articles-section-title"></h3>
        </div>
        <div id="articles-section-subtitle"></div>

    </div>
    <script src="{{asset 'js/settings.js'}}"></script>
    <script src="{{asset 'js/homepage.js'}}"></script>
</div>
